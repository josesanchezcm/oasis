<fieldset class="span-12">
	<legend>SandBox</legend>
    <label class="float-l span-2 right">id:</label><input id="idElemento" readonly="readonly" class="span-5 float-l "/>
    <label class="float-l span-2 right clear-l">class:</label><input id="classElemento" class="span-9 float-l "/>
    <button id="aplicar" class="float-l clear-l push-2 verde">aplicar classe</button>
</fieldset>
<p>clique nos elementos abaixo para </p>
<div id="exemplo" class="border showgrid">
	<label id="labelInputText">Text input:</label> <input type="text" id="inputText" value="inputText"/>
	<label id="labelInputRadio">Radio input:</label> <input type="Radio" id="inputRadio"/>
	<label id="labelInputCheckbox">Checkbox input:</label> <input type="checkbox" id="inputCheckbox"/>
	<label id="labelSelect">Select field:</label> <select id="select"><option>Option 01</option><option>Option 02</option></select>
	<label id="labelTextArea">Textarea:</label><textarea id="textArea">Textarea text</textarea>
	<button id="button" value="button text">button text</button>
	<button id="button2" class="buttonBar verde">buttonBar verde</button>
	<button id="button2" class="buttonBar vermelho">buttonBar vermelho</button>
	<button id="button2" class="buttonBar azul">buttonBar azul</button>
