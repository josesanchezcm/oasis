<script type="text/javascript" language="javascript">
    function sandBox(obj){
        var idElemento = $('#idElemento');
        var classElemento = $('#classElemento');
        classElemento.focus();
        idElemento.val('');
        classElemento.val('');
        idElemento.val(obj.get(0).getAttribute('id'));
        classElemento.val(obj.get(0).getAttribute('class'));
    }

    $('#labelInputText'     ).click(function(){sandBox($(this))});
    $('#inputText'          ).click(function(){sandBox($(this))});
    $('#labelInputRadio'    ).click(function(){sandBox($(this))});
    $('#inputRadio'         ).click(function(){sandBox($(this))});
    $('#labelInputCheckbox' ).click(function(){sandBox($(this))});
    $('#inputCheckbox'      ).click(function(){sandBox($(this))});
    $('#labelSelect'        ).click(function(){sandBox($(this))});
    $('#select'             ).click(function(){sandBox($(this))});
    $('#labelTextArea'      ).click(function(){sandBox($(this))});
    $('#textArea'           ).click(function(){sandBox($(this))});
    $('#button'             ).click(function(){sandBox($(this))});
    $('#aplicar').click(function(){
        var id = $('#idElemento').val();
        $('#'+ id).attr('class', $('#classElemento').val());
    })
</script>
