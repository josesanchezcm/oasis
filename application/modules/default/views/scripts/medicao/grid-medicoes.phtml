				if(strlen($res['tx_medicao']) >= 120){
					$fim = "...";
				}
				$tx_medicao = substr($res['tx_medicao'],0,120) 
			?>
			<td style="cursor: pointer;" onClick="recuperaDadosMedicao(<?php echo $res['cd_medicao'] ?> )"><?php echo $tx_medicao.$fim; ?></td>
			<td style="cursor: pointer;" onClick="recuperaDadosMedicao(<?php echo $res['cd_medicao'] ?> )"><?php echo $res['st_nivel_medicao']; ?></td>
		</tr>
	<?php
		endforeach;
	} else {
		echo " <tr>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
			  </tr>";
	}
	?>
	</tbody>
</table>
