<script type="text/javascript">
$(document).ready(function() { 
	// call the tablesorter plugin 
    $("#tableMedicoes").tablesorter({widthFixed: true, widgets: ['zebra']});
    $("#tableMedicoes").tablesorterPager({container: $("#tableMedicoesPager")}); 
});
</script>
<table id="tableMedicoes" cellspacing="1" class="tablesorter">
	<thead>
		<tr>
            <th class="span-7"><?php echo $this->escape($this->translate('L_VIEW_GRID_MEDICAO')) ?></th>
			<th class="span-4"><?php echo $this->escape($this->translate('L_VIEW_GRID_NIVEL')) ?></th>
		</tr>
	</thead>
	<tbody>
	<?php
	if($this->res){
		foreach ($this->res as $res):
	?>
